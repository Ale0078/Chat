<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ContentControlVerticalCenter" TargetType="{x:Type ContentControl}">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ContentControlLastMessageUnreadStatusBase" TargetType="{x:Type ContentControl}" BasedOn="{StaticResource ContentControlVerticalCenter}">
        <Setter Property="Margin" Value="0, 0, 3, 0"/>
    </Style>

    <Style x:Key="ContentControlMessageUnreadStatusBase" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="1, 0"/>
    </Style>
</ResourceDictionary>