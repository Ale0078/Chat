<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="GridToMembersFromList" TargetType="{x:Type Grid}">
        <Setter Property="Height" Value="52"/>
        <Setter Property="Focusable" Value="False"/>
    </Style>

    <Style x:Key="GridEllipsePhoto" TargetType="{x:Type Grid}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Margin" Value="8, 0"/>
    </Style>

    <Style x:Key="GridGroupMessageBase" TargetType="{x:Type Grid}">
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="GridCurrentUserGroupMessage" TargetType="{x:Type Grid}" BasedOn="{StaticResource GridGroupMessageBase}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <Style x:Key="GridOtherUsersGroupMessage" TargetType="{x:Type Grid}" BasedOn="{StaticResource GridGroupMessageBase}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
</ResourceDictionary>