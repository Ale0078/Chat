<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="IconGreenIcon" TargetType="{x:Type Control}">
        <Setter Property="Foreground" Value="#99DA00"/>
    </Style>

    <Style x:Key="IconGreenWhite" TargetType="{x:Type Control}">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="IconUserInfoButtonIcon" TargetType="{x:Type Control}">
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <Style x:Key="IconMessageReadStatusWithGreenColor" TargetType="{x:Type Control}" BasedOn="{StaticResource IconGreenIcon}">
        <Setter Property="Height" Value="15"/>
        <Setter Property="Width" Value="15"/>
    </Style>

    <Style x:Key="IconMessageReadStatusWithWhiteColor" TargetType="{x:Type Control}" BasedOn="{StaticResource IconGreenWhite}">
        <Setter Property="Height" Value="15"/>
        <Setter Property="Width" Value="15"/>
    </Style>
</ResourceDictionary>