<UserControl x:Class="Chat.Client.View.ChatUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat.Client.View"
             xmlns:user="clr-namespace:Chat.Models;assembly=Chat.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="ChatControl">
    <UserControl.Resources>
        <Style x:Key="MessageTemplate"
               TargetType="Border">
            <Setter Property="CornerRadius"
                    Value="10"/>
            <Setter Property="Padding"
                    Value="5"/>
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Opacity="0.2"
                                      Color="#5d5b5d"/>
                </Setter.Value>
            </Setter>
            
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFromCurrentUser}"
                             Value="True">
                    <Setter Property="Background"
                            Value="#858cfb"/>
                    <Setter Property="HorizontalAlignment"
                            Value="Right"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsFromCurrentUser}"
                             Value="False">
                    <Setter Property="Background"
                            Value="#e772fb"/>
                    <Setter Property="HorizontalAlignment"
                            Value="Left"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SendingTimeMessage"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="8"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="TextAlignment"
                    Value="Right"/>
        </Style>

        <DataTemplate x:Key="MessagesTemplate"
                      DataType="{x:Type user:ChatMessage}">
            <Border Style="{StaticResource MessageTemplate}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="{Binding Message}"/>

                    <TextBlock Grid.Row="1"                             
                               Text="{Binding SendingTime, StringFormat={}{0:t}}"
                               Style="{StaticResource SendingTimeMessage}"/>
                </Grid>
            </Border>
        </DataTemplate>

        <ControlTemplate x:Key="MessagesScrolViewer"
                         TargetType="ItemsControl">
            <Border BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsPresenter/>
                </ScrollViewer>
            </Border>
        </ControlTemplate>

        <Style x:Key="ControlVisabilityByTrigger"
               TargetType="{x:Type FrameworkElement}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedUser}"
                                         Value="{x:Null}">
                    <Setter Property="Visibility" 
                                        Value="Hidden"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedUser}">
                    <Setter Property="Visibility" 
                                        Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="UsersTemplate"
                      DataType="{x:Type user:UserModel}">
            <Grid>
                <TextBlock Text="{Binding Name}"
                           FontSize="24"
                           FontWeight="Bold"/>
            </Grid>
        </DataTemplate>

        <Style x:Key="ListBoxItemTemplate"
               TargetType="{x:Type ListBoxItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#3e90fd"/>
                            </Trigger>
                            <Trigger Property="IsSelected"
                                     Value="False">
                                <Setter Property="Background"
                                        Value="White"/>
                            </Trigger>

                            <!--<EventTrigger RoutedEvent="MouseEnter">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation From="#ffffff"
                                                                    To="#3e90fd"
                                                                    Storyboard.TargetProperty="Background.Color"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>-->
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid DataContext="{Binding ElementName=ChatControl, Path=DataContext}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0"
                 Padding="0"
                 Margin="0"
                 ItemsSource="{Binding OtherUsers}"
                 SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                 ItemTemplate="{StaticResource UsersTemplate}"
                 ItemContainerStyle="{StaticResource ListBoxItemTemplate}"
                 BorderThickness="0, 0, 0.3, 0"
                 BorderBrush="Black"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <ItemsControl Grid.ColumnSpan="2"
                          BorderThickness="0, 0, 0, 0.2"
                          BorderBrush="Black"
                          ItemsSource="{Binding SelectedUser.Messages}"
                          ItemTemplate="{StaticResource MessagesTemplate}"
                          Template="{StaticResource MessagesScrolViewer}"/>

            <TextBox Grid.Row="1"
                     Grid.Column="0"
                     Margin="10"
                     Name="Message"
                     Style="{StaticResource ControlVisabilityByTrigger}"/>

            <Button Grid.Row="1"
                    Grid.Column="1"
                    Content="Send"
                    Command="{Binding ReciveMessage}"
                    CommandParameter="{Binding ElementName=Message, Path=Text}"
                    Margin="0, 10, 10, 10"
                    Style="{StaticResource ControlVisabilityByTrigger}"/>
        </Grid>
    </Grid>
</UserControl>
